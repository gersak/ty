{
  "name": "@gersak/ty",
  "version": "0.2.0",
  "description": "Modern Web Components Library - Zero dependency, modular web components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/components/button.js",
      "types": "./dist/components/button.d.ts"
    },
    "./modal": {
      "import": "./dist/components/modal.js",
      "types": "./dist/components/modal.d.ts"
    },
    "./input": {
      "import": "./dist/components/input.js",
      "types": "./dist/components/input.d.ts"
    },
    "./dropdown": {
      "import": "./dist/components/dropdown.js",
      "types": "./dist/components/dropdown.d.ts"
    },
    "./calendar": {
      "import": "./dist/components/calendar.js",
      "types": "./dist/components/calendar.d.ts"
    },
    "./date-picker": {
      "import": "./dist/components/date-picker.js",
      "types": "./dist/components/date-picker.d.ts"
    },
    "./multiselect": {
      "import": "./dist/components/multiselect.js",
      "types": "./dist/components/multiselect.d.ts"
    },
    "./css": {
      "import": "./dist/css/ty.css"
    },
    "./css/min": {
      "import": "./dist/css/ty.min.css"
    },
    "./cdn": {
      "import": "./dist/cdn/ty.js"
    }
  },
  "files": [
    "dist/**/*",
    "packages/core/css/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "web-components",
    "typescript",
    "ui-components",
    "modular",
    "zero-dependency",
    "custom-elements",
    "shadow-dom"
  ],
  "author": "Gersak <dev@gersak.io>",
  "homepage": "https://github.com/gersak/ty#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gersak/ty.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "esbuild": "^0.24.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "shadow-cljs": "^2.28.0",
    "tailwindcss": "4.1",
    "typescript": "^5.7.0",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "dev": "shadow-cljs -A:dev watch site",
    "dev:css": "npx @tailwindcss/cli -i ./site/tailwind.css -o ./site/public/css/site.css --watch",
    "dev:ts": "cd packages/core && npm run dev",
    "test:ts": "npm run build:ts && python3 -m http.server 8000",
    "clean": "rm -rf dist",
    "build:ts": "cd packages/core && npm run build && npm run build:cdn",
    "build:css": "mkdir -p dist/css && cp packages/core/css/ty.css dist/css/ty.css",
    "build:css:min": "node scripts/minify-css.mjs",
    "build:cdn": "cd packages/core && npm run build:cdn",
    "build:site:css": "npx @tailwindcss/cli -i ./site/public/css/site.css -o ./site/public/css/site.css -m",
    "build:cljs": "shadow-cljs release lib",
    "build:all": "npm run clean && npm run build:ts && npm run build:css && npm run build:css:min",
    "build:verify": "node scripts/verify-build.mjs",
    "size": "echo \"\\n=== Bundle Sizes ===\" && ls -lh dist/index.js dist/cdn/ty.js dist/css/*.css 2>/dev/null | awk '{printf \"%-40s %s\\n\", $9, $5}'",
    "generate:lucide": "node scripts/generate-lucide-icons.mjs",
    "generate:heroicons": "node scripts/generate-heroicons.mjs",
    "generate:material": "node scripts/generate-material.mjs",
    "generate:fontawesome": "node scripts/generate-fontawesome.mjs",
    "generate:icons": "node scripts/generate-custom-icons.mjs",
    "generate:all": "npm run generate:lucide && npm run generate:heroicons && npm run generate:material && npm run generate:fontawesome",
    "prepublishOnly": "npm run build:all"
  }
}
