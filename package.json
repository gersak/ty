{
  "name": "@gersak/ty",
  "version": "0.2.0",
  "description": "Modern Web Components Library - Zero dependency, modular web components",
  "main": "packages/core/dist/index.js",
  "module": "packages/core/dist/index.js",
  "types": "packages/core/dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./packages/core/dist/index.js",
      "types": "./packages/core/dist/index.d.ts"
    },
    "./button": {
      "import": "./packages/core/dist/components/button.js",
      "types": "./packages/core/dist/components/button.d.ts"
    },
    "./css": {
      "import": "./dev/css/ty.css"
    },
    "./cljs": {
      "import": "./dist/ty.js"
    }
  },
  "files": [
    "packages/core/dist/**/*",
    "dist/**/*",
    "dev/css/ty.css",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "web-components",
    "typescript",
    "ui-components",
    "modular",
    "zero-dependency",
    "custom-elements",
    "shadow-dom"
  ],
  "author": "Gersak <dev@gersak.io>",
  "homepage": "https://github.com/gersak/ty#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gersak/ty.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.24.0",
    "postcss": "^8.5.6",
    "shadow-cljs": "^2.28.0",
    "tailwindcss": "4.1",
    "typescript": "^5.7.0",
    "xml2js": "^0.6.2"
  },
  "scripts": {
    "dev": "shadow-cljs -A:dev watch site",
    "dev:css": "npx @tailwindcss/cli -i ./site/tailwind.css -o ./site/public/css/site.css --watch",
    "dev:ts": "cd packages/core && npm run dev",
    "test:ts": "npm run build:ts && python3 -m http.server 8000",
    "build:ts": "cd packages/core && npm run build",
    "build:ts:cdn": "cd packages/core && npm run build:cdn",
    "build:ts:all": "cd packages/core && npm run build:all",
    "build:cljs": "shadow-cljs release lib",
    "build:css": "npx @tailwindcss/cli -i ./site/public/css/site.css -o ./site/public/css/site.css -m",
    "build": "npm run build:ts && npm run build:cljs",
    "generate:lucide": "node scripts/generate-lucide-icons.mjs",
    "generate:heroicons": "node scripts/generate-heroicons.mjs",
    "generate:material": "node scripts/generate-material.mjs",
    "generate:fontawesome": "node scripts/generate-fontawesome.mjs",
    "generate:icons": "node scripts/generate-custom-icons.mjs",
    "generate:all": "npm run generate:lucide && npm run generate:heroicons && npm run generate:material && npm run generate:fontawesome",
    "prepublishOnly": "npm run build"
  }
}
